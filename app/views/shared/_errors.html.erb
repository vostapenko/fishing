<% if object.errors.any? %>
  <div class="error_explanation">
    <div class="alert alert-error">
      Данная форма содержит <%= pluralize(object.errors.count, "ошибки") %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
