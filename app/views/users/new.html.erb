<% provide(:title, 'Регистрация') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>Добавить нового пользователя</h4>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/errors', object: f.object %>
      <%= render 'fields', f: f %>

      <%= f.submit "Создать аккаунт", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">                                             
  <div class="text-link">                                     
      <h5><%= link_to 'Назад', users_url, method: :get %></h5>
  </div>                                                      
</div>                                              
