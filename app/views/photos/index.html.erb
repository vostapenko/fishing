<%= provide(:title, "Фото") %>

<div class="row">
  <nav>
    <ul class="navigation">
      <%= render 'navbar' %>
    </ul>
  </nav>
</div>

<div class="row">
  <div class="photos">
    <% if @photos.any? %>
      <% @photos.in_groups_of(2) do |group| %>
          <% group.each do |photo| %>
            <% if photo %>
              <div class="col-md-6">
                <div class="fk_photo thumbnail">
                  <%= link_to (image_tag photo.photo_url), photo %>
                    <div class="caption">
                      <div class="title">
                        <h6><%= photo.title %></h6>
                      </div>
                      <div>
                        <b><%= photo.description %></b>
                       </div>
                           <% if logged_in? %>                                     
                            <%= link_to "Удалить", photo, method: :delete, data: { confirm: "Вы уверены ?" } %>
                            <%= link_to "Редактировать", edit_photo_url(photo) %> 
                          <% end %>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= will_paginate %>  
  </div>
</div>

<%= render 'shared/back' %>

<div class="row">
  <div class="text-down">
    <%= render 'shared/social' %>
  </div>
</div>

